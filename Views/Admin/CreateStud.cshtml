@model Project.Models.Student
@{
    ViewData["Title"] = "CreateStud";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Vertical Layouts</h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Basic Layout</h5>
                        <small class="text-muted float-end">Default label</small>
                    </div>
                    <div class="card-body">
                        <form asp-action="'CreateStud'" method="post">
                            <div class="mb-3">
                                <label class="form-label" asp-for="StudID">Student ID</label>
                                <input class="form-control" asp-for="StudID" placeholder="1521421" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label"  asp-for="StudName">Student Name</label>
                                <input class="form-control"  placeholder="ACME Inc."  asp-for = "StudName"/>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for = "Email">Email</label>
                                <div class="input-group input-group-merge">
                                    <input asp-for = "Email"
                                           class="form-control"
                                           placeholder="john.doe"
                                           aria-label="john.doe"
                                           aria-describedby="basic-default-email2" />
                                    <span class="input-group-text" id="basic-default-email2">example.com</span>
                                </div>
                                <div class="form-text">You can use letters, numbers & periods</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for = "Marks">Student Marks</label>
                                <input
                                      asp-for = "Marks"
                                       class="form-control phone-mask"
                                       placeholder="658 799 8941" />
                            </div>
                           
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

       
    </div>
</div>
<!-- / Content -->

